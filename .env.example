# This file contains the environment variables for the project.
# Copy this file to .env and replace the values with your own.

# PostgreSQL database configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=pazago_dev
POSTGRES_HOST_PORT=5432
DATABASE_URL=postgres://postgres:postgres@localhost:5432/pazago_dev

# Port configuration for the servers
FASTIFY_PORT=3001
EXPRESS_PORT=4000

# CORS configuration
CORS_ORIGIN=http://localhost:3000

# Base URLs for the APIs
NEXT_PUBLIC_FASTIFY_BASE_URL=http://localhost:3001
NEXT_PUBLIC_EXPRESS_BASE_URL=http://localhost:4000

# Google OAuth configuration
GOOGLE_CLIENT_ID=enter-google-client-id
GOOGLE_CLIENT_SECRET=enter-google-client-secret

# NextAuth configuration
NEXTAUTH_SECRET=generate-32-char-secret

# Redis configuration
REDIS_URL=redis://localhost:6379
REDIS_INSIGHTS_TTL=60
REDIS_PLAYBOOKS_TTL=60
REDIS_HOST_PORT=6379

# Host port configuration for the servers
FASTIFY_HOST_PORT=3001
EXPRESS_HOST_PORT=4000